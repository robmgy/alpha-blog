<font color="blue">
    
<h1>create an article</h1><br/>

<% if @post.errors.any? %>
<h2>The following errors prevented the article from being created</h2>
<ul>
<% @post.errors.full_messages.each do |msg| %>
<li><%= msg %></li>

<% end %>
</ul>
<% end %>
<br/>
<br/>

<%= form_for @post do |f| %>
<p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
    
</p>
<p> <%= f.label :description %> <br/>
    <%= f.text_area :description %></p>
    
<p>
     <%= f.submit %>
</p>

<% end %>
</font>
